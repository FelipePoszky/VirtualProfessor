<ChatsQuizzes>:#:kivy !
    id: id_chat
    orientation: 'vertical'
    size: (dp(60), dp(80))
    size_hint: None, None
    spacing: dp(5)
    id_chat: root.id_widget
    width: avatar.width + dp(5)
    md_bg_color: app.theme_cls.primary_color
    button: app.quizlist_builder(root.id_widget)
    Avatar2: 
        id: avatar
        source: root.image
        pos_hint: {'center_x': .5}
    MDLabel: 
        text: root.name
        size: self.texture_size
        theme_text_color: 'Custom'
        size_hint_y: None
        halign: 'center'
        font_size: sp(9)
        color: [1, 1, 1, 1]
        bold: True
        shorten: True
        shorten_font: "right"

<Avatar@RelativeLayout>:
    size: (dp(45), dp(45))
    size_hint: None, None
    source: root.source
    MDCard:
        size: root.size
        size_hint: (None, None)
        radius: [30, ]
        md_bg_color: app.theme_cls.accent_color
        elevation: 0
        pos_hint: {"center_x": .5, "center_y": .5}
    FitImage:
        size: root.size[0] - dp(3), root.size[1] - dp(3)
        radius: [30, ]
        size_hint: None, None
        source: root.source
        pos_hint: {"center_x": .5, "center_y": .5}

<Avatar2@RelativeLayout>:
    size: (dp(45), dp(45))
    size_hint: None, None
    source: root.source
    MDCard:
        size: root.size
        size_hint: (None, None)
        radius: [30, ]
        md_bg_color: app.theme_cls.accent_color
        elevation: 0
        pos_hint: {"center_x": .5, "center_y": .5}
        on_press: app.quizlist_builder(root.parent.id_chat)
    FitImage:
        size: root.size[0] - dp(3), root.size[1] - dp(3)
        radius: [30, ]
        size_hint: None, None
        source: root.source
        pos_hint: {"center_x": .5, "center_y": .5}

<StoryWithIcon@MDBoxLayout>:
    id: story1
    orientation: 'vertical'
    size: (dp(60), dp(80))
    size_hint: None, None
    spacing: dp(5)
    width: icon.width + dp(5)
    MDIconButton: 
        id: icon
        icon: 'comment-question'
        theme_text_color: 'Custom'
        pos_hint: {'center_x': .5}
        md_bg_color: app.theme_cls.accent_color
        text_color: [1, 1, 1, 1]
        icon_size: '20sp'
        user_font_size: '18sp'
        size_hint: None, None
        on_release: app.quizlist_builder("Todos")
    MDLabel: 
        text: 'Todos'
        size: self.texture_size
        theme_text_color: 'Custom'
        size_hint_y: None
        halign: 'center'
        font_size: sp(9)
        color: [1, 1, 1, 1]
        bold: True

